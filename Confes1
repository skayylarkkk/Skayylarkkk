    <script>
        const text = `Hey kamu! ğŸ˜œ\n\nAku cuma mau bilang... aku tuh suka banget sama kamu, tapi gengsi banget buat ngomong langsung!\n\nJadi, aku putusin untuk confess lewat website lucu ini aja. Kalau kamu nggak suka, aku akan jadi stalker yang profesional. ğŸ¤“ğŸ’˜\n\nMau nggak jadi pacarku? Kalau enggak, aku tetap bakal jadi penggemar kamu, tapi gemes-gemes deh! ğŸ˜‚ğŸ’–`;

        let i = 0;
        const speed = 50;

        function typeWriter() {
            if (i < text.length) {
                document.getElementById("confessText").innerHTML += text.charAt(i);
                i++;
                setTimeout(typeWriter, speed);
            } else {
                document.getElementById("answerButton").style.display = "inline-block";
            }
        }

        function jawabConfess() {
            alert("Ya ampun, kamu bilang 'Iya' atau 'Engga'? ğŸ˜˜ğŸ’˜ Aku bakal ngambek kalau enggak dijawab, lho!");
        }

        window.onload = () => {
            document.getElementById("bgMusic").play();
            typeWriter();
        };
    </script>

